<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
  http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">


	<!-- Habilita el uso de anotaciones -->
	<context:annotation-config />

	<bean id="empleado" class="co.com.udem.dto.Empleado">
	<constructor-arg value="Juan" />
	<constructor-arg value="Lopez" />
	<constructor-arg value="150000" />
	<constructor-arg value="Antioquia" />
	</bean> 
	
	<bean id="empresa" class="co.com.udem.dto.Empresa"/>
	
</beans>